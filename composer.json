{
  "name": "crs/k8s-ws-ratchet",
  "description": "Ratchet based websocket adapter for crs/k8s",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Chad Sikorra",
      "email": "Chad.Sikorra@gmail.com"
    }
  ],
  "keywords": [
    "k8s",
    "kubernetes"
  ],
  "repositories": [
    { "type": "vcs", "url": "https://github.com/ChadSikorra/k8s.git" }
  ],
  "require": {
    "php": ">=7.2",
    "crs/k8s": "dev-master",
    "ratchet/pawl": "^0.3.0"
  },
  "require-dev": {
    "ext-mbstring": "*",
    "friendsofphp/php-cs-fixer": "^2.0",
    "mockery/mockery": "~1.3.0",
    "phpstan/phpstan": "^0.12",
    "phpunit/phpunit": "^8.0"
  },
  "config": {
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "Crs\\K8sWsRatchet\\": "src/Crs/K8sWsRatchet"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "unit\\Crs\\K8sWsRatchet\\": "tests/unit/Crs/K8sWsRatchet"
    }
  },
  "scripts": {
    "cs-fix": [
      "@putenv PHP_CS_FIXER_IGNORE_ENV=1",
      "php-cs-fixer fix src/ --rules=@PSR2"
    ],
    "analyse": [
      "phpstan analyse"
    ]
  }
}
